                        size:dp(300), dp(160)
                        radius:[dp(25)]  
            MDBoxLayout:
                md_bg_color: app.theme_cls.bg_darkest
                size_hint : 1 , None
                height : dp(1000)
                padding: dp(10),dp(60),dp(10),dp(10)
                MDCard:
                    id : idp2
                    elevation:dp(10)
                    radius: [dp(25)]
