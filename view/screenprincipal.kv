#: include view/item.kv

<BoxLayoutEx>:
    rest_height: idpA.height - (banner_block_id.height + dp(70))
    orientation: 'vertical'        
    MDToolbar:
        left_action_items: [["cog", lambda x: app.callback()]]
        title: '[b]120000 F[/b]'
        anchor_title: "center"
    MDBoxLayout:
        id:idpA
        ScrollView:
            MDBoxLayout:
                padding : 0,0
                adaptive_height: True
                orientation: 'vertical'
                Label:
                    text:'12OOO F'
                    bold: True
                # Banner block
                MDBoxLayout:

                    id: banner_block_id
                    orientation: 'vertical'
                    md_bg_color: app.theme_cls.primary_dark
                    size_hint : 1 , None
                    height : idpA.height * .4
                    canvas:
                        Color:
                            rgb : 1,1,1
                        RoundedRectangle:
                            source: "assets/image_wave.jpg"
                            pos: self.center[0] - (root.width * .4), self.center[1] - (root.width * .2)
                            size: root.width * .8, (root.width * .8) * .5
                            radius:[dp(25)]
                # Content block   
                MDBoxLayout:
                    md_bg_color: app.theme_cls.bg_darkest
                    size_hint : 1 , None
                    adaptive_height: True
                    padding: dp(10),dp(60),dp(10),dp(10)
                    MDCard:
                        id : idp2
                        size_hint_y: None
                        height:  root.rest_height if recycle.height < root.rest_height else root.height
                        elevation:dp(10)
                        radius: [dp(5)]
                        md_bg_color: 1,1,1,1
                        RecycleView:
                            data: root.list_item
                            viewclass: 'MyItem'
                            RecycleBoxLayout:
                                padding: dp(25), 0
                                id: recycle
                                default_size: None, dp(80)
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical'


                            
                FloatLayout:
                    orientation: 'vertical'
                    pos_hint:{"center_x":.5,}
                    size_hint: 1,None
                    height : 0
                    MDCard:
                        orientation: 'vertical'
                        size_hint: None, None
                        size : dp(500),dp(90)
                        center_x: banner_block_id.center_x
                        center_y: banner_block_id.y
                        radius: [dp(15)]
                        elevation:10
                        on_release:app.manager.push('screen2')
                        MDIcon:
                            halign: "center"
                            icon: "account"
                            theme_text_color: 'Custom'
                            text_color: app.theme_cls.primary_dark
                            font_size:dp(35)
                            
                        MDLabel:
                            text: "ENVOYER"
                            halign:"center"
                            font_style:("H6")
                            color: app.theme_cls.primary_dark      
                    
                        
