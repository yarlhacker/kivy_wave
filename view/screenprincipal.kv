<BoxLayoutEx>
    orientation: 'vertical'        
    MDToolbar:
        left_action_items: [["menu", lambda x: app.callback()]]
    ScrollView:
        MDList:
            id:idp
            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color: app.theme_cls.primary_color
                size_hint : 1 , None
                height : dp(230)
